<launch>
  <arg name="delay" default="8.0"/>
  <arg name="record_data" default="true"/>
  <arg name="data_directory" default="/home/joaomendes_ws/src/UAV_3D_reconstruction/motion_planning/data"/>
  <arg name="data_frequency" default="20.0" />
  <arg name="time_limit" default="10" />

  <arg name="UAV_NAME" default="$(optenv UAV_NAME uav2)" />
  <arg name="world_frame" default="map" />

  <group ns="$(arg UAV_NAME)">

    <node pkg="rosbag" type="record" name="rosbag_recorder" args="/rosout /clock /tf /tf_static /$(arg UAV_NAME)/voxblox_node/mesh /mavros/local_position/pose /$(arg UAV_NAME)/reference_out -o $(arg data_directory)/tmp_bags/tmp_bag"/>
    <!--node pkg="rosbag" type="record" name="rosbag_recorder" args="-a -o my_data"/-->

    <!-- Experiment launcher -->
    <node name="eval_data_node" pkg="motion_planning" type="eval_data_node.py" output="screen" required="true">
      <remap from="points" to="/$(arg UAV_NAME)/rgbd_front_pitched/aligned_depth_to_color/points" />
      <remap from="~simulation_ready" to="simulation_ready" />
      <param name="ns_planner" value="planner_node" />
      <param name="ns_voxblox" value="voxblox_node" />
      <param name="delay" value="$(arg delay)" />
      <param name="startup_timeout" value="50.0" />
      <param name="evaluate" value="$(arg record_data)" />
      <param name="eval_directory" value="$(arg data_directory)" />
      <param name="eval_frequency" value="$(arg data_frequency)" />
      <param name="time_limit" value="$(arg time_limit)" />
    </node>
  </group>

</launch>
