<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="UAV_NAME" default="$(optenv UAV_NAME uav1)" />
  <arg name="STANDALONE" default="$(optenv STANDALONE false)" />

    <!-- other args -->
  <arg name="fcu_frame" default="base_link" />
  <arg name="fcu_frame_slashless" default="base_link_$(arg UAV_NAME)" />

  <arg name="realsense_frame" default="camera_link" />
  <arg name="realsense_frame_slashless" default="$(arg UAV_NAME)_camera_link" />

  <!--node pkg="tf2_ros" type="static_transform_publisher" name="$(arg fcu_frame_slashless)_to_$(arg realsense_frame_slashless)" args="0.03 0 -0.15 0 0.175 0 $(arg fcu_frame) $(arg realsense_frame)" /-->
  <node pkg="tf2_ros" type="static_transform_publisher" name="$(arg fcu_frame_slashless)_to_$(arg realsense_frame_slashless)" args="0.03 0 -0.15 0 0.261 0 $(arg fcu_frame) $(arg realsense_frame)" />
  
  <node pkg="motion_planning" type="mavros_tf_broadcaster" name="mavros_tf_broadcaster" output="screen" />
</launch>
